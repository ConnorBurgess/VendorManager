@{
  Layout = "_Layout";
}
<div class=" mx-auto w-full lg:flex rounded-lg overflow-hidden my-2 opacity-75">
  <div
    class="my-32 max-w-screen-lg bg-white border-2 border-gray-300 p-5 py-32 rounded-md tracking-wide shadow-lg border-double border-8 border-light-blue-500">
    <div class="md:flex> 
      @using VendorManager.Models;

      <h1 class=" text-8xl md:justify-center mb-6 items-center">Categories</h1>

      @if (@Model.Count == 0)
      {

        <h3>No Vendors have been added to the manager</h3>
      }
      @* </div>
        </div>
        </div> *@
      <div class="flex flex-col bg-white m-auto p-auto">
        <h1 class="flex py-5 lg:px-20 md:px-10 px-5 lg:mx-40 md:mx-20 mx-5 font-bold text-4xl text-gray-800">
        </h1>
        <div class="flex overflow-x-scroll pb-10 hide-scroll-bar">
          <div class="flex flex-nowrap lg:ml-40 md:ml-20 ml-10 ">
            <div class="inline-block px-3">
              @foreach (Vendor vendor in Model)
              {
                <div class="inline-block px-3">
                  <div
                    class="w-64 h-64 max-w-xs overflow-hidden rounded-lg shadow-md bg-grey hover:shadow-xl transition-shadow duration-300 ease-in-out">
                    <h3><a href='/categories/@vendor.Id'>@vendor.Name</a></h3>
                    <h3><a href='/categories/@vendor.Id'>@vendor.Description</a></h3>
                  </div>
                </div>
              }
              @* @for (int i = 0; i <= 10; i++)
                {
                <div class="inline-block px-3">
                <div
                class="w-64 h-64 max-w-xs overflow-hidden rounded-lg shadow-md bg-grey hover:shadow-xl transition-shadow
                duration-300 ease-in-out">
                </div>
                </div>
                } *@
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <style>
    .hide-scroll-bar {
      -ms-overflow-style: none;
      scrollbar-width: none;
    }

    .hide-scroll-bar::-webkit-scrollbar {
      display: none;
    }
  </style>

  <p><a href='/'>Back home</a></p>
